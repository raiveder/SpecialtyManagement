<Window x:Class="SpecialtyManagement.Windows.LessonTypeAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpecialtyManagement.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="LessonTypeAddWindow" Height="300" Width="700" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Name="TBHeader" Text="Добавление типа дисциплины" FontSize="30" FontWeight="DemiBold" TextAlignment="Center" VerticalAlignment="Center"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Тип дисциплины" Margin="10"/>
            <TextBox Name="TBoxType" MaxWidth="400"/>
        </StackPanel>

        <Button Grid.Row="2" Name="BtnAdd" Content="Добавить" Margin="10" Click="BtnAdd_Click"/>
    </Grid>
</Window>