<Window x:Class="SpecialtyManagement.Windows.CreateDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpecialtyManagement.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Управление специальностью" Height="140" Width="500" WindowStartupLocation="CenterScreen" Icon="/Resources/Icon.ico" Closing="Window_Closing">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Grid.ColumnSpan="3" Name="TBHeader" FontSize="30" Margin="0 0 0 20" FontWeight="DemiBold"/>
            <ProgressBar Name="pbTest" Height="20" Margin="20 0" IsIndeterminate="True"/>
        </StackPanel>
    </Grid>
</Window>