<Window x:Class="SpecialtyManagement.Windows.ChoiceGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpecialtyManagement.Windows"
        mc:Ignorable="d"
        Title="ChoiceGroupWindow" Height="200" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Выберите группу добавляемых студентов" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <ComboBox Grid.Row="1" Name="CBGroups" Width="100" VerticalAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button Grid.Row="2" Name="BtnAccept" Content="Применить" Margin="10" Click="BtnAccept_Click"/>
    </Grid>
</Window>